<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#F5F5F5"
    tools:context=".Transform">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:text="Transform Money"
        android:textColor="#3B99FF"
        android:textSize="25sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etd_AmountTrans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter amount"
        android:padding="12dp"
        android:layout_marginTop="70dp"
        android:background="@android:drawable/edit_text"
        android:layout_marginBottom="16dp" />

   <EditText
       android:id="@+id/etd_CurrencyTrans"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:hint="Enter currency"
       android:padding="12dp"
       android:layout_marginTop="20dp"
       android:background="@android:drawable/edit_text"
       android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btn_Trans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="#3B99FF"
        android:text="transform"
        android:textColor="@color/white"
        />
</LinearLayout>